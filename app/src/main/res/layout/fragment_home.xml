<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="30dp"
    android:paddingHorizontal="15dp"
    android:orientation="vertical">

        <TextView
            android:id="@+id/home_welcomeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_welcomeText"
            android:layout_alignParentTop="true"
            style="@style/Theme.MDS_TP3_Quiz.smallText"/>

        <TextView
            android:id="@+id/home_letsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_letsPlay"
            android:layout_below="@+id/home_welcomeBack"
            style="@style/Theme.MDS_TP3_Quiz.homeText"/>

        <TextView
            android:id="@+id/home_textContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_homeContext"
            android:layout_marginTop="10dp"
            android:layout_below="@id/home_letsPlay"
            style="@style/Theme.MDS_TP3_Quiz.homeText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/primaryDarkColor"
        android:orientation="vertical"
        android:layout_below="@+id/home_textContext"
        style="@style/Theme.MDS_TP3_Quiz.homeProfileInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_daysStrike"
                    style="@style/Theme.MDS_TP3_Quiz.homeProfileInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_daysStrike" />

                <TextView
                    style="@style/Theme.MDS_TP3_Quiz.homeProfileInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_dailyPoints" />

            </LinearLayout>

            <ImageView
                android:id="@+id/home_profileImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:src="@drawable/ic_baseline_person_24" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/home_profileExpBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:max="100"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    </LinearLayout>

    <Button
        android:id="@+id/home_newGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_newGame"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false" />
</RelativeLayout>